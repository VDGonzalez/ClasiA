<% if @caracteristicas_equipamiento.empty? && @caracteristicas_seguridad.empty? && @caracteristicas_exterior.empty? %>
	<div class="container margin-container bg-white">
		<div class="row header-form">
		    <div class="col-xs-push-1 col-xs-10 text-center">
		      <h2 class="h-padding">Publicar Vehículo</h2>
		    </div>
	  	</div>
	  	<div class="row">
			<div class="col-xs-12 col-md-offset-2 col-md-8">
				<legend>Qué tipo de vehículo desea publicar?</legend>
			</div>
			<div class="col-xs-offset-1 col-xs-10 col-md-offset-3 col-md-6">
				<div class="row">
					<div class="col-xs-12 col-sm-6 col-md-4">
						<div class="form-group">
							<a type="button" class="btn btn-primary btn-lg btn-block" href="<%= new_vehiculo_path(:segmento => 1) %>">Auto</a>
						</div>
					</div>
					<div class="col-xs-12 col-sm-6 col-md-4">
						<div class="form-group">
							<a type="button" class="btn btn-primary btn-lg btn-block" href="<%= new_vehiculo_path(:segmento => 2) %>">Camioneta</a>
						</div>
					</div>
					<div class="col-xs-12 col-sm-6 col-md-4">
						<div class="form-group">
							<a type="button" class="btn btn-primary btn-lg btn-block" href="<%= new_vehiculo_path(:segmento => 3) %>">Camion</a>
						</div>
					</div>
					<div class="col-xs-12 col-sm-6 col-md-4">
						<div class="form-group">
							<a type="button" class="btn btn-primary btn-lg btn-block" href="<%= new_vehiculo_path(:segmento => 4) %>">Moto</a>
						</div>
					</div>
					<div class="col-xs-12 col-sm-6 col-md-4">
						<div class="form-group">
							<a type="button" class="btn btn-primary btn-lg btn-block" href="<%= new_vehiculo_path(:segmento => 5) %>">Náutica</a>
						</div>
					</div>
					<div class="col-xs-12 col-sm-6 col-md-4">
						<div class="form-group">
							<a type="button" class="btn btn-primary btn-lg btn-block" href="<%= new_vehiculo_path(:segmento => 1) %>">Otros</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
<% else %>
	<%= render 'form'  %>
<% end %>
