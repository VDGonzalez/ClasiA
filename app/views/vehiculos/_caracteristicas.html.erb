<div class="row">
  <div class="col-xs-6 col-md-4">
    <!-- EQUIPAMIENTO -->
    <h4>Equipamiento</h4>
    <% if @vehiculo.id %>
      <% @caracteristicas_equipamiento.each do |b| %>
        <% if @split_equipamiento.include?(b.nombre) %>
          <div class="checkbox">
            <label>
            <input type='checkbox' value='<%= b.nombre %>' class="array_equipamiento" checked><%= b.nombre %>
            </label>
          </div>
        <% else %>
        <div class="checkbox">
            <label>
            <input type='checkbox' value='<%= b.nombre %>' class="array_equipamiento" ><%= b.nombre %>
