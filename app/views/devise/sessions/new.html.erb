<div class="container margin-container bg-white">

	<div class="row header-form">
		<div class="col-xs-push-1 col-xs-10 text-center">
			<h2 class="h-padding">Iniciar Sesi&oacute;n</h2>
		</div>
	</div>
	<div class="row">
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>

		<div class="col-xs-offset-1 col-xs-10 col-md-offset-3 col-md-6">
			<!-- ALERTA -->
			<% if notice or alert %>
			<div class="alert alert-danger alert-dismissable">
      			<button type="button" class="close" data-dismiss="alert">&times;</button>
      				<%= notice %>
					<%= alert %>
			</div>
			<% end %>
			<!-- INPUTS -->
			  	<div class="form-group">
			  		<label for="email">Email:</label>
			  		<%= f.input :email, required: false, autofocus: true, label: false, input_html: { class: 'form-control ' } %>
				</div>
			  	<div class="form-group">
			  		<label for="contraseña">Contraseña:</label>
			  		<%= f.input :password, required: false, label: false, input_html: { class: 'form-control ' } %>
				</div>
			<!-- BOTONES -->
			<div class="row">
				<div class="col-xs-12">
					<div class="form-group">
						<div class="checkbox">
							<label>
				  			<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
				  			</label>
			  			</div>
					</div>
				</div>
				<div class="col-xs-6">
					<div class="form-group">
						    <%= f.button :submit, "Iniciar Sesión", class: 'btn btn-success' %>
					</div>
				</div>			  		
				<div class="col-xs-6">
					<div class="form-group text-right">
						<%= render "devise/shared/links" %> 
					</div>	 
				</div>	
			</div>
		</div>
		<% end %>	      
  	</div>	
</div>

<!-- BANNER REGISTRARSE -->
<div class="container margin-container">

	<div class="row banner-form">
		<div class="col-xs-offset-1 col-xs-10 text-center">
				<a href="<%= new_usuario_registration_path %>">
						<h1>
							<span class="glyphicon glyphicon-chevron-right"></span>
							REGISTRATE GRATIS
						</h1>
						<p>
							<span class="glyphicon glyphicon-bullhorn"></span>
							<span>&nbsp;COMENZA A PUBLICAR HOY!!</span>
						</p>
				</a>
		</div>	
	</div>
</div>